<header class="container row-fluid">
	<div class="navbar navbar-fixed-top">
		<ul>
			<li class="menu menu-heading">
				<%= link_to "Where to Watch", root_path %></li>
			<li class="menu">
				<%= link_to "About", about_path %></li>
			<% if current_user.nil?  %>
				<ul class="pull-right">
					<li class="menu">
						<%= link_to "Sign in", signin_path %></li>
				</ul>
			<% else %>
				<ul class="pull-right">
					<li class="menu">
						<%= link_to "Settings", '#' %></li>
					<li class="menu">
						<%= link_to "Sign out", signout_path, method: "delete" %></li>
				</ul>
			<% end %>
		</ul>
	</div>
</header>